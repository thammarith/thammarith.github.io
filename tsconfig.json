{
	"compilerOptions": {
		"baseUrl": ".",
		"isolatedModules": true,
		"module": "ES2022",
		"moduleResolution": "node",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@constants/*": ["src/constants/*"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@styles/*": ["src/styles/*"]
		},
		"resolveJsonModule": true,
		"types": ["astro/env"]
	}
}
